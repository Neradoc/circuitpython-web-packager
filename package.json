{
  "name": "circup-electron-app",
  "version": "1.0.0-alpha.1",
  "description": "A Library manager for Circuitpython and more",
  "main": "main.cjs",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/Neradoc/circuitpython-web-packager",
  "keywords": [
    "Circuitpython",
    "circup"
  ],
  "author": "Neradoc",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.66",
    "@electron-forge/maker-dmg": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^20.1.0",
    "electron-rebuild": "^3.2.9"
  },
  "type": "module",
  "dependencies": {
    "drivelist": "^11.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "fs-extra": "^10.1.0",
    "multicast-dns": "^7.2.5",
    "node-powershell": "^5.0.1",
    "path": "^0.12.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": false,
        "ignore": "^/_.*"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "circup_electron_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "overwrite": true,
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
